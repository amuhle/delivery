= form_for @product do |f|
  -if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name,I18n.t('products.form.name')
    = f.text_field :name
  .field
    = f.label :description,I18n.t('products.form.description')
    = f.text_field :description
  .field
    = f.label :price,I18n.t('products.form.price')
    = f.text_field :price
  .field
    = f.label :tax,I18n.t('products.form.tax')
    = f.select :tax, options_for_select(@taxs,:selected=> @product.tax)
  .actions
    = f.submit I18n.t('general.save'), class: "btn btn-primary", id: 'product_save'
