<h2><%= I18n.t('devise.sessions.new.title') %></h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email,I18n.t('devise.sessions.new.email') %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password, I18n.t('devise.sessions.new.password') %><br />
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me,I18n.t('devise.sessions.new.remember_me') %></div>
  <% end -%>

  <div><%= f.submit I18n.t('devise.sessions.new.sig_up') %></div>
<% end %>

<%= render "devise/shared/links" %>
