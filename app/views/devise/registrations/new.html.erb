<h2><%= I18n.t('devise.registrations.new.title') %></h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email, I18n.t('devise.registrations.new.email')  %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password, I18n.t('devise.registrations.new.password')  %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation, I18n.t('devise.registrations.new.password_confirmation')  %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :supplier, I18n.t('devise.registrations.new.supplier')  %><br />
  <%= f.collection_select :supplier_id, @suppliers, :id, :name%></div>

  <div><%= f.submit I18n.t('devise.registrations.new.register') %></div>
<% end %>

<%= render "devise/shared/links" %>
