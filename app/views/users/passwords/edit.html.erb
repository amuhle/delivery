<h2><%= I18n.t('users.password.edit.title') %></h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div><%= f.label :password, I18n.t('users.password.edit.new_password') %><br />
  <%= f.password_field :password %></div>

<div><%= f.label :password_confirmation, I18n.t('users.password.edit.confirm_password') %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit I18n.t('users.password.edit.change') %></div>
<% end %>

<%= render "users/shared/links" %>
